<!doctype html>
<html lang="en">
<head>
    <title>{{project.title}}</title>
    <meta name="description" content="{{project.preview}}" />

    <meta property="og:title" content="{{project.name}}" />
  	<meta property="og:type" content="article" />
  	<meta property="og:url" content="https://{{site.url}}/post/{{project.slug}}" />
  	<meta property="og:image" content="{{{project.image}}}=s260-c" />
  	<meta property="og:image:width" content="260px" />
  	<meta property="og:image:height" content="260px" />
  	<meta property="og:description" content="{{project.preview}}" />
    {{>head}}
</head>

    <body>
        <div id="vertex-container" class="project-post" >
            {{>header2}}

            <section class="py-5 mb-5" data-aos="fade-up" >
                <div class="container post-content">
                    <div class="text-center pt-5">
                        <h1 class="section-title position-relative pb-3 mt-5">{{project.name}}</h1>
                    </div>

                    <div class="row mt-5 pt-4">
                        <div class="col-md-5">
                            <p class="pt-3 mb-2r"><img src="{{{project.image}}}=s1080"/></p>
                        </div>
                        <div class="col-md-7">
                            <h4 style="font-weight: 600;">{{project.category}}</h4>
                            <div class="text">{{{project.description}}}</div>
                            <ul class="mb-3 mt-2r">
                                <li><strong>Client</strong><p>{{project.client}}</p></li>
                                <li><strong>Year</strong><p>{{project.dateRange}}</p></li>
                            </ul>
                            <a class="view-btn" href="{{{project.link}}}" target="_blank"><button class="btn btn-primary btn-send-message">View Project</button></a>
                        </div>
                    </div>
                </div>
            </section>

            <footer style="background:url('https://lh3.googleusercontent.com/1U9qW1j25Tzt--WPtw1u-1hMopjAN3xYVu1gTbTPZ5-1GvcPWxN67y3CHR1336jkMgw_JCTLzyfTHMZpJZ5wEXoICIAd0p7Dur8_tg=s2048');background-size:cover;background-position:center;height:50vh">
                <div class="gradient-div py-3" style="height:50vh">
                    <div class="container pt-5 pb-5 text-black">
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <p><img class="img-logo-footer" style="width:200px;" src="{{{global.img_logo_footer}}}=s440"/></p>
                
                                    <ul class="list-inline social social-white-alt social-rounded social-sm mb-0">
                                        <li class="list-inline-item"><a href="{{{global.social.facebook.link}}}" target="_blank"><i class="fa fa-facebook"></i></a></li>
                                                                                
                                        <li class="list-inline-item"><a href="{{{global.social.linkedin.link}}}" target="_blank"><i class="fa fa-linkedin"></i></a></li>
                                        
                                        <li class="list-inline-item"><a href="{{{global.social.instagram.link}}}" target="_blank"><i class="fa fa-instagram"></i></a></li>
                                                                                
                                        <li class="list-inline-item"><a href="{{{global.social.github.link}}}" target="_blank"><i class="fa fa-github"></i></a></li>
                                        
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>    
            </footer>
        </div>

        {{>scripts}}
    </body>
</html>
